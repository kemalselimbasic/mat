    </head>
    
            <body id="body">
                <div class="wrapper" id="wrapper">
                   
                    <div class="main" id="main">
          

                        <div class="text-center form-group" style="margin-top: 10%;">
                      

                            <form action="/predmeti/dodaj" method="POST">
                            <input class="form-control" placeholder="Ime" type="text" name="ime" required><br>
                              <select class="form-control"  name="razred">
                                  <option selected hidden>Razred</option>
                                  <option>1</option>
                                  <option>2</option>
                                  <option>3</option>
                                  <option>4</option>
                              </select><br>
                              <select class="form-control"  name="brojModula">
                                <option selected hidden>Broj Modula</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select><br>
                    
                            <select class="form-control"  name="smjer">
                                <option selected hidden>Smjer</option>
                                <%smjerovi.forEach(s=>{%>
                                    <option><%=s.ime%></option>
                                <%})%>
                            </select><br>
                         
                         
                            <textarea class="form-control" placeholder="Opis"  name="opis" cols="20" rows="5"></textarea>
                    
                                <input type="submit" class="btn-success" style="margin-top: 10px;" value="submit">
                             </form>
                      </div>
                    
                
                    
                    </div>
                </div>
              
            </body>
                
            
