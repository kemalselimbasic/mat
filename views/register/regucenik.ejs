<html>
    <head>
        <title>Add ucenik</title>
        <link rel="stylesheet" href="../style/style.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
       
    </head>
    
            <body id="body">
                <div class="wrapper" id="wrapper">
                   
                    <div class="main" id="main">
          

                        <div class="text-center form-group" style="margin-top: 5%;">
                            <form action="/registerUcenik" method="POST">
                                 <input class="form-control" type="text" name="ime" placeholder="Ime" required><br>
                                 <input class="form-control"  type="text" name="prezime" placeholder="Prezime" required><br>
                                 <input class="form-control"  type="email" name="email" placeholder="E-mail" required><br>
                              
                                
                                 <input class="form-control"  type="text" name="brojTelefona" placeholder="Broj telefona" required><br>
                                 <input class="form-control"  type="text" name="adresa" placeholder="Adresa" required><br>
                                 <input class="form-control"  type="text" name="imeroditelj1" placeholder="Ime 1. roditelja" required><br>
                                 <input class="form-control"  type="text" name="telefonroditelj1" placeholder="Broj telefona 1. roditelja" required><br>
                                <input class="form-control"  type="text" name="imeroditelj2" placeholder="Ime 2. roditelja" required><br>
                                 <input class="form-control"  type="text" name="telefonroditelj2" placeholder="Broj telefona 2. roditelja" required><br>
                                 <input class="form-control"  type="text" name="jmbg" placeholder="JMBG" required><br>
                            
                                <select class="form-control"  name="odjeljenje" required><br>
                                    <option hidden selected>Izaberite odjeljenje</option>
                                    <%odjeljenja.forEach(s=>{%>
                                  
                                        <option value="<%=JSON.stringify(s)%>"><%=s.odjeljenje%></option>
                                
                                
                                      
                                   <% })%> 
                                </select>
                                
                                
                             <input class="btn-success" value="Submit" type="submit">
                             </form>
                      </div>
                    
                
                    
                    </div>
                </div>
              
            </body>
                
            
            </html>